  </Target>
  <Target Name="BeforeBuild">
    <HeatDirectory Directory="$(ProjectDir)deploy\files" PreprocessorVariable="var.HarvestPath" OutputFile="HeatGeneratedFileList.wxs" ComponentGroupName="HeatGenerated" DirectoryRefId="INSTALLFOLDER" AutogenerateGuids="true" ToolPath="$(WixToolPath)" SuppressFragments="true" SuppressRegistry="true" SuppressRootDirectory="true" RunAsSeparateProcess="$(RunWixToolsOutOfProc)" />
  </Target>
  <PropertyGroup>
    <PreBuildEvent>xcopy "$(SolutionDir)SSHAgentMonitor\bin\Release\net6.0-windows\publish\win-x86" "$(ProjectDir)deploy\files" /Y /I
xcopy "$(ProjectDir)deploy\files\SSHAgentMonitor.exe" "$(ProjectDir)deploy\service\" /Y
del "$(ProjectDir)deploy\files\SSHAgentMonitor.exe"</PreBuildEvent>
  </PropertyGroup>
